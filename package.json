{
  "name": "nrchkb-website",
  "description": "NRCHKB Website",
  "version": "1.51.0",
  "hugo-bin": {
    "buildTags": "extended"
  },
  "browserslist": [
    "defaults"
  ],
  "repository": "https://github.com/NRCHKB/NRCHKB.github.io",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "init": "rimraf public resources && ts-node utils/frontmatter/fetch-github-contributors.ts && ts-node utils/frontmatter/update-contributors.ts && ts-node utils/generate-changelog.ts",
    "prebuild": "npm run init",
    "prestart": "npm run init",
    "start": "hugo server --disableFastRender",
    "build": "hugo --gc --minify",
    "build:preview": "npm run prebuild && hugo --environment netlify",
    "lint": "eslint assets/js config && stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\" && markdownlint *.md content/**/*.md",
    "release": "standard-version",
    "server": "hugo server",
    "test": "npm run -s lint",
    "env": "env",
    "precheck": "npm version",
    "check": "hugo version",
    "postinstall": "ts-node utils/generate-wiki-pages.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.17",
    "@babel/core": "^7.17",
    "@babel/preset-env": "^7.16",
    "@fullhuman/postcss-purgecss": "^4.1",
    "@types/glob": "^7.2.0",
    "@types/node": "^16.11.2",
    "autoprefixer": "^10.4",
    "axios": "^0.26.1",
    "bootstrap": "^5.1.3",
    "clipboard": "^2.0",
    "eslint": "^8.10",
    "glob": "^7.2.0",
    "hap-nodejs": "^0.10.0",
    "highlight.js": "^11.4.0",
    "hugo-bin": "^0.76",
    "husky": "^7.0.4",
    "instant.page": "^5.1",
    "lazysizes": "^5.3",
    "markdownlint-cli": "^0.31",
    "node-red-contrib-homekit-bridged": "^1.4.3",
    "postcss": "^8.4",
    "postcss-cli": "^8.3",
    "prettier": "^2.5.1",
    "purgecss-whitelister": "^2.4",
    "rimraf": "^3.0",
    "shx": "^0.3.4",
    "standard-version": "^9.3",
    "stylelint": "^13.13",
    "stylelint-config-standard": "^22.0",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "author": {
    "name": "Tadeusz Wyrzykowski",
    "email": "shaquu@icloud.com",
    "url": "https://github.com/Shaquu"
  },
  "engines": {
    "node": ">=16"
  }
}
